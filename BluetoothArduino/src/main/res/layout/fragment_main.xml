<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tvConnection" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chk_box_backlight_text_manual"
        android:id="@+id/chkBoxBacklight"
        android:layout_alignTop="@+id/tvConnection"
        android:layout_alignParentLeft="true"
        android:checked="false"
        />

    <SeekBar
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBacklight"
        android:layout_below="@id/chkBoxBacklight"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tvConnection"
        android:max="255"
        android:indeterminate="false" />

</RelativeLayout>
